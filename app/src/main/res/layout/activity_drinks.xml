<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drinks">

    <com.google.android.material.circularreveal.CircularRevealGridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        android:columnCount="2"
        android:rowCount="2"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp"
        android:foregroundGravity="">

        <TextView
            android:id="@+id/titleDrink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drinks"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#0A1743"
            android:gravity="center_horizontal"
            android:textSize="50sp"
            android:layout_marginTop="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal">


                <ImageView
                    android:id="@+id/imgAir"
                    android:layout_width="30sp"
                    android:layout_height="150sp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="50sp"
                    app:srcCompat="@drawable/air_mineral" />
                <ImageView
                    android:id="@+id/imgApel"
                    android:layout_width="30sp"
                    android:layout_height="150sp"
                    android:layout_marginHorizontal="30sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/jus_apel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/air"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:text="Air Mineral"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/apel"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50sp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Jus Apel"
                    android:textColor="@color/black"
                    android:textSize="27sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20sp">

                <TextView
                    android:id="@+id/hargaAir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15sp"
                    android:text="Rp 123"
                    android:fontFamily="sans-serif"
                    android:textColor="#CC0000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/hargaApel"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="115sp"
                    android:text="Rp 123"
                    android:fontFamily="sans-serif"
                    android:textColor="#CC0000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal">


                <ImageView
                    android:id="@+id/imgMangga"
                    android:layout_width="30sp"
                    android:layout_height="150sp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="50sp"
                    app:srcCompat="@drawable/jus_mangga" />
                <ImageView
                    android:id="@+id/imgAlpukat"
                    android:layout_width="30sp"
                    android:layout_height="150sp"
                    android:layout_marginHorizontal="30sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/jus_alpukat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/mangga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20sp"
                    android:text="Jus Mangga"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/alpukat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20sp"
                    android:text="Jus Alpukat"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:textSize="26sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/hargaMangga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15sp"
                    android:text="Rp 123"
                    android:fontFamily="sans-serif"
                    android:textColor="#CC0000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/hargaAlpukat"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="115sp"
                    android:text="Rp 123"
                    android:fontFamily="sans-serif"
                    android:textColor="#CC0000"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/orderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Order"
            android:textColor="@color/white"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="bottom|center"
            />

    </com.google.android.material.circularreveal.CircularRevealGridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>